<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SailSpots" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash theme (used at process start) -->
    <style name="Theme.SailSpots.Splash" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/bg_splash_gradient</item>
        <item name="postSplashScreenTheme">@style/Theme.SailSpots</item>
    </style>

    <style name="Theme.SailSpots.NoActionBar" parent="Theme.SailSpots">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SailSpots.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SailSpots.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>